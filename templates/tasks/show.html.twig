                {% extends 'base.html.twig' %}
                {% block title %}Tasks
                {% endblock %}
                {% block body %}
                <h1 class='my-5'>Ma tâche</h1>

                <table class="table table-secondary">
                    <tbody>
                        <tr>
                            <th>Nom du projet</th>
                            <td>{{ task.idTask.name }}</td>
                        </tr>
                        <tr>
                            <th>Nom du client</th>
                            <td>{{ task.idTask.IdClient.name }}</td>
                        </tr>
                        <tr>
                            <th>Nom de la tâche</th>
                            <td>{{ task.name }}</td>
                        </tr>
                        <tr>
                            <th>Date de la tâche</th>
                            <td>{{ task.taskDate ? task.taskDate|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Nombre d'heures travaillées</th>
                            <td>{{ task.hourWorked }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ task.description }}</td>
                        </tr>
                        <tr>
                            <th>Taux horaire</th>
                            <td>{{task.idTask.price}}</td>
                        </tr>
                        <tr></tr>
                        <tr>
                            <th>Total en €</th>
                            <td>{{ task.hourWorked * task.idTask.price }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class='d-flex justify-content-between mb-4'>
                <div><a class='btn btn-outline-secondary' href="{{ path('tasks_index', {'id': task.idTask.id}) }}">Retour à mes tâches</a>
                </div>
                {% if task.idTask.endDate == null %}
                <div>
                 <a class='btn btn-outline-warning' href="{{ path('tasks_edit', {'id': task.id}) }}">Modifier cette tâche</a>
                </div>
                 {{ include('tasks/_delete_form.html.twig') }}
                {% endif %}
                </div>
                
                {% endblock %}