{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.taskDate, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.taskDate, {'attr': {'class': 'form-control datepicker'}}) }}
            {{ form_errors(form.taskDate) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.hourWorked, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.hourWorked, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.hourWorked) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.description, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button class="btn btn-outline-warning">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
{{ form_end(form) }}

