<div style="width:50%">
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="mb-3">
        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.adresse) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.zip, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.zip, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.zip) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.city, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.city) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.mail, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.mail) }}
    </div>
    <div class="mb-3">
        {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.phone) }}
    </div>
    <button type="submit" class="btn btn-warning">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
</div>
