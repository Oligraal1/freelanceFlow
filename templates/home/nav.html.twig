{% block body %}
<nav class="navbar navbar-expand-lg navbar-primary bg-primary">
    <a class="navbar-brand" href="{{ path('home') }}">Freelance TM</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03"
        aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="container collapse navbar-collapse" id="navbarColor03">
        <ul class="navbar-nav mr-auto d-flex justify-content-between">
            <div class="d-flex justify-content-around">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}"><i class="fas fa-home"></i> <span
                            class="sr-only">(current)</span></a>
                </li>
                {% if app.user != null %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('client_new') }}">Créer un projet</a>
                </li>
                    {% if projects %}
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('project_index') }}">Gérer un projet existant</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path('client_index') }}">Gérer les clients</a>
                    </li>
                    {% endif %}
                {% endif %}
            </div>
            {% if app.user %}
            <li class="nav-item">
                <a class="nav-link bg-dark" href="{{ path('app_logout') }}">Se déconnecter</a>
            </li>
            {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
            </li>
            {% endif %}
        </ul>
        {% if app.user %}
        <a href='{{ path("user") }}' class="btn btn-outline-warning">Bonjour {{user.fistname}} {{ user.name }}</a>
        {% endif %}
    </div>
</nav>
{% endblock %}