		{% extends 'base.html.twig' %} {% block title %}Edit Project{% endblock %} {% block body %}

		<div class="d-flex justify-content-between">
			<div>
				<a class='btn btn-outline-secondary mt-2' href="{{ path('tasks_index', {'id': project.id}) }}">Retour à mon
					projet</a>
			</div>
			<div>
				{% if project.endDate == null %}
				<a href="{{ path('project_closure', {'id': project.id}) }}" class='btn btn-outline-warning mt-2'>Clôturer le
					projet</a>
				{% else %}
				<a href="{{ path('project_closure', {'id': project.id}) }}" class='btn btn-outline-warning mt-2'>Réouvrir le
					projet</a>
				{% endif %}
			</div>
			{{ include('project/_delete_form.html.twig') }}

		</div>
		{% if project.endDate == null %}
		<h1 class='my-5'>Modifier le projet :
			{{ project.name }}</h1>
		{{ include('project/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
		{% else %}
			<div class='mb-2 pb-2' style='text-align:center; font-size:1.1rem'>Si tu souhaites modifier ton projet, merci de le réouvrir.</div>
		{% endif %}
		{% endblock %}